Private Function Selected_Read() As Boolean

  Return GetView()._IsRowSelected(_Row)

End

Private Sub Selected_Write(Value As Boolean)

  Dim hView As _CheckedGridView = GetView()
  Dim hRows As _CheckedGridView_Rows = GetRows()

  If hView.Mode = Select.Single Then
    hView._SelectRow(_Row, Value)
  Else If hView.Mode = Select.Multiple Then
    If Value Then
      If Not hRows._IsSelected(_Row) Then hRows.Select(_Row)
    Else
      If hRows._IsSelected(_Row) Then hRows.UnSelect(_Row)
    Endif
  Endif

End

Private Function Checked_Read() As Boolean

  Return GetView()._IsRowChecked(_Row)

End

Private Sub Checked_Write(Value As Boolean)

  Dim hRows As _CheckedGridView_Rows = GetRows()

  If Value Then
    If Not hRows._IsChecked(_Row) Then hRows.Check(_Row)
  Else
    If hRows._IsChecked(_Row) Then hRows.UnCheck(_Row)
  Endif

End

